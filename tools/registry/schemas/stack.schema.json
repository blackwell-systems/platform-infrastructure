{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://registry.blackwell.dev/schemas/stack.schema.json",
  "title": "Stack Metadata",
  "description": "Schema for stack metadata in the Blackwell registry",
  "type": "object",
  "required": [
    "stack_type",
    "tier_name",
    "category",
    "monthly_cost_range",
    "setup_cost_range",
    "target_market",
    "best_for",
    "complexity_level",
    "key_features",
    "hosting_pattern",
    "performance_tier",
    "last_updated",
    "schema_version"
  ],
  "properties": {
    "stack_type": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Unique stack type identifier (lowercase, kebab-case)"
    },
    "tier_name": {
      "type": "string",
      "minLength": 1,
      "description": "Full tier description for business positioning"
    },
    "category": {
      "type": "string",
      "enum": [
        "ssg_template_business_service",
        "foundation_ssg_service",
        "cms_tier_service",
        "ecommerce_tier_service",
        "composed_service"
      ],
      "description": "Stack service category classification"
    },
    "monthly_cost_range": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Monthly cost range [min, max] in USD"
    },
    "setup_cost_range": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Setup cost range [min, max] in USD"
    },
    "target_market": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Target market segments for this stack"
    },
    "best_for": {
      "type": "string",
      "minLength": 1,
      "description": "Primary use case description"
    },
    "complexity_level": {
      "type": "string",
      "enum": [
        "low_to_medium",
        "medium_to_high",
        "high",
        "enterprise"
      ],
      "description": "Technical complexity level"
    },
    "key_features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "List of key features and capabilities"
    },
    "hosting_pattern": {
      "type": "string",
      "enum": [
        "aws_optimized",
        "github_compatible",
        "multi_cloud",
        "hybrid"
      ],
      "description": "Hosting deployment pattern"
    },
    "performance_tier": {
      "type": "string",
      "enum": [
        "basic",
        "optimized",
        "premium",
        "enterprise",
        "maximum"
      ],
      "description": "Performance classification tier"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version for this stack record"
    },
    "ssg_engine": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Fixed SSG engine (for template and foundation stacks)"
    },
    "ssg_engine_options": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_-]+$"
      },
      "minItems": 1,
      "description": "Compatible SSG engines (for flexible tier stacks)"
    },
    "cms_provider": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "CMS provider (for CMS tier and composed stacks)"
    },
    "ecommerce_provider": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "E-commerce provider (for e-commerce tier and composed stacks)"
    },
    "cms_type": {
      "type": "string",
      "enum": [
        "git_based",
        "api_based",
        "hybrid",
        "headless"
      ],
      "description": "CMS architecture type (for CMS-enabled stacks)"
    },
    "ecommerce_type": {
      "type": "string",
      "enum": [
        "simple_integration",
        "advanced_platform",
        "hosted_platform",
        "api_first"
      ],
      "description": "E-commerce platform type (for e-commerce-enabled stacks)"
    },
    "template_variants": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Available template variants for this stack"
    },
    "provider_combinations": {
      "type": "string",
      "enum": ["fixed", "flexible", "cms_flexible", "ecommerce_flexible"],
      "description": "Provider combination flexibility (for composed stacks)"
    },
    "supported_integrations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Supported third-party integrations"
    },
    "deployment_requirements": {
      "type": "object",
      "description": "Stack deployment requirements",
      "properties": {
        "min_build_time_minutes": {
          "type": "number",
          "minimum": 0,
          "description": "Minimum expected build time"
        },
        "max_build_time_minutes": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum expected build time"
        },
        "required_env_vars": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Required environment variables"
        },
        "optional_env_vars": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Optional environment variables"
        }
      },
      "additionalProperties": true
    },
    "architecture_details": {
      "type": "object",
      "description": "Technical architecture information",
      "properties": {
        "aws_services": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "AWS services used by this stack"
        },
        "build_triggers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Events that trigger builds"
        },
        "caching_strategy": {
          "type": "string",
          "enum": ["none", "basic", "advanced", "global"],
          "description": "Content caching strategy"
        }
      },
      "additionalProperties": true
    },
    "business_model": {
      "type": "object",
      "description": "Business model and pricing information",
      "properties": {
        "billing_model": {
          "type": "string",
          "enum": ["fixed", "usage_based", "hybrid", "tiered"],
          "description": "Billing model type"
        },
        "scalability_tier": {
          "type": "string",
          "enum": ["startup", "business", "enterprise", "unlimited"],
          "description": "Scalability classification"
        },
        "support_level": {
          "type": "string",
          "enum": ["community", "standard", "priority", "enterprise"],
          "description": "Support level included"
        }
      },
      "additionalProperties": true
    },
    "compatibility_matrix": {
      "type": "object",
      "description": "Compatibility information",
      "properties": {
        "node_versions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)?(\\.\\d+)?$"
          },
          "description": "Supported Node.js versions"
        },
        "browser_support": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Supported browser versions"
        },
        "mobile_optimized": {
          "type": "boolean",
          "description": "Mobile optimization included"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "anyOf": [
    {
      "properties": {
        "category": {
          "enum": ["ssg_template_business_service", "foundation_ssg_service"]
        }
      },
      "required": ["ssg_engine"]
    },
    {
      "properties": {
        "category": {
          "enum": ["cms_tier_service", "ecommerce_tier_service"]
        }
      },
      "required": ["ssg_engine_options"]
    },
    {
      "properties": {
        "category": { "const": "composed_service" }
      },
      "required": ["ssg_engine_options", "provider_combinations"]
    }
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "category": { "const": "cms_tier_service" }
        }
      },
      "then": {
        "required": ["cms_provider", "cms_type"]
      }
    },
    {
      "if": {
        "properties": {
          "category": { "const": "ecommerce_tier_service" }
        }
      },
      "then": {
        "required": ["ecommerce_provider", "ecommerce_type"]
      }
    }
  ]
}