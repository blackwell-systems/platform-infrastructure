{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://registry.blackwell.dev/schemas/provider.schema.json",
  "title": "Provider Metadata",
  "description": "Schema for provider metadata in the Blackwell registry",
  "type": "object",
  "required": [
    "provider_name",
    "provider_type",
    "display_name",
    "tier_name",
    "category",
    "monthly_cost_range",
    "setup_cost_range",
    "target_market",
    "best_for",
    "complexity_level",
    "key_features",
    "hosting_pattern",
    "performance_tier",
    "last_updated",
    "schema_version"
  ],
  "properties": {
    "provider_name": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Unique provider identifier (lowercase, kebab-case)"
    },
    "provider_type": {
      "type": "string",
      "enum": ["cms", "ecommerce", "ssg"],
      "description": "Category of provider"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable provider name"
    },
    "tier_name": {
      "type": "string",
      "minLength": 1,
      "description": "Full tier description for business positioning"
    },
    "category": {
      "type": "string",
      "enum": [
        "cms_tier_service",
        "ecommerce_tier_service",
        "ssg_template_business_service",
        "foundation_ssg_service",
        "composed_service"
      ],
      "description": "Service category classification"
    },
    "monthly_cost_range": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Monthly cost range [min, max] in USD"
    },
    "setup_cost_range": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Setup cost range [min, max] in USD"
    },
    "target_market": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Target market segments for this provider"
    },
    "best_for": {
      "type": "string",
      "minLength": 1,
      "description": "Primary use case description"
    },
    "complexity_level": {
      "type": "string",
      "enum": [
        "low_to_medium",
        "medium_to_high",
        "high",
        "enterprise"
      ],
      "description": "Technical complexity level"
    },
    "key_features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "List of key features and capabilities"
    },
    "hosting_pattern": {
      "type": "string",
      "enum": [
        "aws_optimized",
        "github_compatible",
        "multi_cloud",
        "hybrid"
      ],
      "description": "Hosting deployment pattern"
    },
    "performance_tier": {
      "type": "string",
      "enum": [
        "basic",
        "optimized",
        "premium",
        "enterprise",
        "maximum"
      ],
      "description": "Performance classification tier"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version for this provider record"
    },
    "cms_type": {
      "type": "string",
      "enum": [
        "git_based",
        "api_based",
        "hybrid",
        "headless"
      ],
      "description": "CMS architecture type (required for CMS providers)"
    },
    "ecommerce_type": {
      "type": "string",
      "enum": [
        "simple_integration",
        "advanced_platform",
        "hosted_platform",
        "api_first"
      ],
      "description": "E-commerce platform type (required for e-commerce providers)"
    },
    "ssg_engine": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Primary SSG engine (for SSG providers)"
    },
    "ssg_engine_options": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_-]+$"
      },
      "description": "Compatible SSG engines (for flexible providers)"
    },
    "template_variants": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Available template variants"
    },
    "language": {
      "type": "string",
      "description": "Primary programming language (for SSG engines)"
    },
    "ecosystem": {
      "type": "string",
      "description": "Development ecosystem (for SSG engines)"
    },
    "build_speed": {
      "type": "string",
      "enum": ["fastest", "fast", "medium", "slow"],
      "description": "Build performance classification (for SSG engines)"
    },
    "transaction_fee": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Transaction fee percentage (for e-commerce providers)"
    },
    "api_endpoints": {
      "type": "object",
      "description": "Provider API endpoints and webhooks",
      "properties": {
        "webhook_url": {
          "type": "string",
          "format": "uri",
          "description": "Webhook endpoint URL pattern"
        },
        "api_base": {
          "type": "string",
          "format": "uri",
          "description": "Base API URL"
        },
        "documentation": {
          "type": "string",
          "format": "uri",
          "description": "API documentation URL"
        }
      },
      "additionalProperties": true
    },
    "supported_events": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Supported webhook events"
    },
    "requirements": {
      "type": "object",
      "description": "Provider-specific requirements",
      "properties": {
        "api_key": {
          "type": "boolean",
          "description": "Requires API key"
        },
        "webhook_secret": {
          "type": "boolean",
          "description": "Requires webhook secret"
        },
        "custom_domain": {
          "type": "boolean",
          "description": "Supports custom domain"
        }
      },
      "additionalProperties": true
    },
    "limitations": {
      "type": "object",
      "description": "Provider limitations and constraints",
      "properties": {
        "max_requests_per_hour": {
          "type": "integer",
          "minimum": 0,
          "description": "API rate limit per hour"
        },
        "max_file_size_mb": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum file size in MB"
        },
        "max_content_items": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum content items"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "provider_type": { "const": "cms" }
        }
      },
      "then": {
        "required": ["cms_type"]
      }
    },
    {
      "if": {
        "properties": {
          "provider_type": { "const": "ecommerce" }
        }
      },
      "then": {
        "required": ["ecommerce_type"]
      }
    },
    {
      "if": {
        "properties": {
          "provider_type": { "const": "ssg" }
        }
      },
      "then": {
        "required": ["ssg_engine", "language", "ecosystem", "build_speed"]
      }
    }
  ]
}